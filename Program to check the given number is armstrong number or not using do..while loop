#include<stdio.h>
#include<math.h>
int count(int n)
{
	int count=0;
	do
	{
		n/=10;
		count++;
	}
	while(n!=0);
	return count;
	
}
int arm(int n)
{
	int s=0,temp=n,d=count(n),di;
	do
	{
		di=temp%10;
		s+=pow(di,d);
		temp/=10;
	}
	while(temp!=0);
	return (s==n);
}
int main()
{
	int n;
	printf("enter the no:");
	scanf("%d",&n);
	if(arm(n))
		printf("%d is an armstrong number\n",n);
	else
		printf("%d is not a armstrong number",n);
	return 0;
}
