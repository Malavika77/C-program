#include<stdio.h>
int main()
{
	int week;
	printf("Enter the day no(1-7): ");
	scanf("%d",&week);
	switch(week)
	{
		case 1:
			printf("\n Monday");
			break;
		case 2:
			printf("\n Tuesday");
			break;
		case 3:
			printf("\n Wednesday");
			break;
		case 4:
			printf("\n Thursday");
		break;
		case 5:
			printf("\n Friday");
		break;
		case 6:
			printf("\n Saturday");
		break;
		case 7:
			printf("\n Sunday");
		break;
		default:printf("\n week no not matched");
		break;
	}
	return 0;
}
