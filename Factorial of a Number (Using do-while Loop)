#include <stdio.h>

int main() 
{
    int n;
    int f= 1;
    printf("Enter a number: ");
    scanf("%d", &n);
    if (n < 0) 
	{
        printf("Factorial is not defined for negative numbers \n");
    } 
	else 
	{
		int i=1;
       do 
	  	{
            f*= i; 
            i++;
    	} 
		while (i <= n);  
        printf("Factorial is: %d \n", f);
    }

    return 0;
}
