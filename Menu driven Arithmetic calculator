#include<stdio.h>
int main()
{
	int choice=0,i=0;
	float a,b;
	while(1)
	{
		printf("1.start\n2.exit \n Enter option:");
		scanf("%d",&i);
	if(i==1)
	{
		printf("Enter two numbers:");
		scanf("%f %f",&a,&b);
		printf("\n 1.Addition \n 2.Subtraction \n 3.Multiplication \n 4.Division\n");
		printf("\n Select the choice:");
		scanf("%d",&choice);
	 	if(choice==1)
	 	{
	 		printf("Sum is %f \n",a+b);
	 	}
	 	else if(choice==2)
	 	{
	 		printf("Difference is %f \n",a-b);
		}
	 	else if(choice==3)
		{
	 		printf("Product is %f \n",a*b);
	 	}
	 	else if(choice==4)
	 	{
	 		printf("Quotient is %f \n",a/b);
	 		break;
	 	}
	 	else
	 	printf("Invalid choice \n");
	}
	else
	{
		printf("Exited");
		break;
	}
	
	}
	return 0;
}
