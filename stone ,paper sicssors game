#include<stdio.h>
#include<time.h>
#include<math.h>
#include<stdlib.h>
int game(char player,char comp)
{
	if(player==comp)
	return -1;
	if(player=='s'&& comp=='p')
	return 0;
		else if(player=='p' && comp=='s')
		return 1;
	if(player=='s'&& comp=='z')
	return 1;
	else if(player=='z'&& comp =='s')
	return 0;
	if(player=='p'&& comp=='z')
	return 0;
	else if(player=='z'&& comp=='p')
	return 1;
}
	
	int main()
	{
		int n;
		char player,comp,result;
		srand(time(NULL));
		n=rand()%100;
		if(n<33)
		comp='s';
		else if(n>33 && n<66)
		comp='p';
		else 
		comp='z';
		printf("\nenter s for stone,p for paper and z for scissors \n ");
		scanf("%c",&player);
		result=game(player,comp);
		if (result == -1) {
        printf("\nGame Draw!\n");
    }
    else if (result == 1) {
        printf("\nYou have won the game!\n");
    }
    else { 
        printf("\nYou have lost the game! better luck next time\n");
    }
        printf("\n You choose : %c and Computer choose : %c\n",player, comp);
 
    return 0;
	}
