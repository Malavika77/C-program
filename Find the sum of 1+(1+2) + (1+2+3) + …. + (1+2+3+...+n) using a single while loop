#include <stdio.h>

int main() {
    int n,i = 1,sum = 0, c= 0;
    printf("Enter a value for n: ");
    scanf("%d", &n);
    while (i <= n) 
	{
        c+= i;  
        printf("%d\t",c);
        sum += c; 
        printf("%d \n",sum);
        i++; 
    }
    printf("The sum of the series is: %d\n", sum);

    return 0;
}
